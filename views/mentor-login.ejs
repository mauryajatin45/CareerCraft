<%- layout('layouts/boilerplate') %>

<style>
  body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    height: 100vh;
    
  }

  .form-card {
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
  }

  .form-card h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 24px;
    text-align: center;
    color: #1f2937;
  }

  .error-message {
    background: #fee2e2;
    color: #b91c1c;
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border: 2px solid #d1d5db;
    border-radius: 8px;
    transition: border-color 0.3s;
  }

  .form-group input:focus {
    border-color: #4f46e5;
    outline: none;
    box-shadow: 0 0 5px rgba(79, 70, 229, 0.5);
  }

  .submit-button {
    width: 100%;
    background: #4f46e5;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
  }

  .submit-button:hover {
    background: #4338ca;
    transform: scale(1.05);
  }

  .footer-text {
    margin-top: 16px;
    text-align: center;
    color: #6b7280;
  }

  .footer-text a {
    color: #4f46e5;
    text-decoration: underline;
  }
</style>

<div class="form-card" style="margin: auto !important; margin-top: 4rem !important;">
  <h2>Mentor Login</h2>

  <% if (error_message) { %>
    <div class="error-message">
      <%= error_message %>
    </div>
  <% } %>

  <form action="/mentor/login" method="POST" class="space-y-4">
    <div class="form-group">
      <input type="email" name="email" placeholder="Email" required>
    </div>
    <div class="form-group">
      <input type="password" name="password" placeholder="Password" required>
    </div>
    <button type="submit" class="submit-button">Login</button>
  </form>

  <p class="footer-text">
    New here? <a href="/mentor/signup">Register as a Mentor</a>
  </p>
</div>
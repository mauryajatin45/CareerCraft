<%- layout('layouts/boilerplate') %>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Market Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9f9f9;
      padding: 30px;
    }
    .container2 {
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    h1, h3 {
      color: #333;
    }
    ul {
      padding-left: 20px;
    }
    li {
      margin-bottom: 10px;
    }
    strong {
      color: #007bff;
    }
  </style>
</head>

<body>
  <div class="container2">
    <h1>Job Market Insights for <%= jobTitle %> in <%= location %></h1>
    <hr>
    <h3>Market Insights:</h3>
    <div>
      <%- jobMarketDataFormatted %>
    </div>
  </div>
</body>

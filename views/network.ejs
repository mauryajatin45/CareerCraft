<%- layout('layouts/boilerplate') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connections for <%= language %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-card {
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }
        .profile-card:hover {
            transform: translateY(-3px);
        }
        .profile-img {
            width: 64px;
            height: 64px;
            object-fit: cover;
            border-radius: 50%;
            margin-right: 1rem;
        }
        .source-badge {
            font-size: 0.75rem;
            padding: 0.2em 0.6em;
            border-radius: 8px;
        }
        .source-twitter {
            background: #1DA1F2;
            color: white;
        }
        .no-results {
            padding: 2rem;
            background-color: #f8d7da;
            border-radius: 8px;
            text-align: center;
            color: #721c24;
            margin-top: 20px;
        }
    </style>
</head>

<body class="bg-light">
    <div class="container mt-5">
        <h1 class="mb-4">Connections for "<%= language %>"</h1>

        <% if (matches.length === 0) { %>
            <div class="no-results">
                <p><%= message %></p>
            </div>
        <% } else { %>
            <div class="row">
                <% matches.forEach(profile => { %>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center profile-card bg-white">
                            <img src="<%= profile.profileImage || '/default.png' %>" class="profile-img" alt="Profile Image">
                            <div>
                                <a href="<%= profile.profileUrl %>" target="_blank" class="fw-bold text-decoration-none">
                                    <%= profile.name %>
                                </a>
                                <div class="mt-1">
                                    <span class="source-badge source-twitter">Twitter</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</body>
</html>

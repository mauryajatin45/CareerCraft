<%- layout('layouts/boilerplate') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/css/home.css" />

  <!-- Hero Section -->
  <section class="hero-section text-center">
    <div class="hero-bg-pattern"></div>
    <div class="container-fluid px-5">
      <div class="hero-content animate__animated animate__fadeIn">
        <div class="lang-badge animate__animated animate__fadeInRight">Supports 10+ Languages <i class="fas fa-language"></i></div>
        <h1 class="hero-title">Transform Your Career with AI Guidance</h1>
        <p class="hero-subtitle">Skill assessments, resume optimization, interview prep, and personalized career paths powered by Gemini AI</p>
        <div class="d-flex justify-content-center gap-3">
          <a href="/register" class="btn btn-primary btn-lg"><i class="fas fa-rocket me-2"></i>Get Started</a>
          <a href="#features" class="btn btn-outline-white btn-lg"><i class="fas fa-search me-2"></i>Explore Features</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">Comprehensive Career Development</h2>
        <p class="lead text-muted">All-in-one platform for professional growth</p>
      </div>
      <div class="row g-4">
        <!-- Updated Feature Cards -->
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-1">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-brain"></i></div>
            <h4>AI Assessments</h4>
            <p>Dynamic skill evaluations with Gemini AI analysis</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-2">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-file-import"></i></div>
            <h4>Resume Crafting</h4>
            <p>PDF analysis and AI-powered improvements</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-3">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-comments"></i></div>
            <h4>Mock Interviews</h4>
            <p>Role-specific practice with AI feedback</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-4">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-user-tie"></i></div>
            <h4>Mentor Network</h4>
            <p>Connect with industry professionals</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section py-5">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">Your Career Growth Journey</h2>
        <p class="lead text-muted">From assessment to career success</p>
      </div>
      <div class="row g-4">
        <div class="col-6 col-md-4 animate__animated animate__fadeInUp">
          <div class="process-card">
            <div class="process-number">1</div>
            <div class="process-content">
              <h4>Skill Profile</h4>
              <p>Create your digital skill inventory with our AI assessment</p>
              <div class="process-icon"><i class="fas fa-clipboard-list"></i></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-md-4 animate__animated animate__fadeInUp animate-delay-1">
          <div class="process-card">
            <div class="process-number">2</div>
            <div class="process-content">
              <h4>AI Analysis</h4>
              <p>Get market-aligned career recommendations</p>
              <div class="process-icon"><i class="fas fa-robot"></i></div>
            </div>
          </div>
        </div>
        <div class="col-6 col-md-4 animate__animated animate__fadeInUp animate-delay-2">
          <div class="process-card">
            <div class="process-number">3</div>
            <div class="process-content">
              <h4>Career Launch</h4>
              <p>Optimized resume and interview preparation</p>
              <div class="process-icon"><i class="fas fa-trophy"></i></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Resume Section -->
  <section class="resume-section py-5 bg-light">
    <div class="container-fluid py-5 px-5">
      <div class="row align-items-center g-5">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
          <div class="resume-preview">
            <div class="resume-mockup">
              <div class="page"></div>
              <div class="page shadow"></div>
            </div>
          </div>
        </div>
        <div class="col-md-6 animate__animated animate__fadeInRight">
          <h2 class="fw-bold mb-4">Smart Resume Optimization</h2>
          <div class="resume-feature">
            <div class="feature-icon"><i class="fas fa-magic"></i></div>
            <div>
              <h5>AI-Powered Feedback</h5>
              <p>Instant analysis of your resume with improvement suggestions</p>
            </div>
          </div>
          <div class="resume-feature">
            <div class="feature-icon"><i class="fas fa-search-minus"></i></div>
            <div>
              <h5>ATS Compliance Check</h5>
              <p>Ensure your resume passes automated screening systems</p>
            </div>
          </div>
          <div class="resume-feature">
            <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
            <div>
              <h5>Skill Gap Analysis</h5>
              <p>Identify missing keywords for your target roles</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mentor Section -->
  <section class="mentor-section py-5">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">Connect with Industry Mentors</h2>
        <p class="lead text-muted">Learn from experienced professionals in your field</p>
      </div>
      <div class="row g-4">
        <div class="col-md-4 animate__animated animate__fadeInUp">
          <div class="mentor-card">
            <div class="mentor-header tech">
              <i class="fas fa-laptop-code"></i>
              <h5>Tech Industry</h5>
            </div>
            <div class="mentor-content">
              <p>Connect with software engineers, product managers, and tech leads</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInUp animate-delay-1">
          <div class="mentor-card">
            <div class="mentor-header business">
              <i class="fas fa-briefcase"></i>
              <h5>Business</h5>
            </div>
            <div class="mentor-content">
              <p>Get guidance from executives and entrepreneurship experts</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInUp animate-delay-2">
          <div class="mentor-card">
            <div class="mentor-header design">
              <i class="fas fa-palette"></i>
              <h5>Design</h5>
            </div>
            <div class="mentor-content">
              <p>Learn from senior UX/UI designers and creative directors</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section text-center">
    <div class="container-fluid px-5 py-5">
      <h2 class="cta-title animate__animated animate__fadeIn">Start Your Career Transformation</h2>
      <p class="lead mb-4 animate__animated animate__fadeIn">Join professionals who advanced their careers with CareerCraft</p>
      <div class="d-flex justify-content-center gap-3">
        <a href="/skill-assessment" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">
          <i class="fas fa-play me-2"></i>Begin Assessment
        </a>
        <a href="/mentors" class="btn btn-outline-white btn-lg animate__animated animate__fadeInUp">
          <i class="fas fa-users me-2"></i>Explore Mentors
        </a>
      </div>
    </div>
  </section>
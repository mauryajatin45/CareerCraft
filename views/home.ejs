<%- layout('layouts/boilerplate') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/css/home.css" />

  <!-- Hero Section -->
  <section class="hero-section text-center">
    <div class="hero-bg-pattern"></div>
    <div class="container-fluid px-5">
      <div class="hero-content animate__animated animate__fadeIn">
        <h1 class="hero-title">Your AI-Powered Career Navigator</h1>
        <p class="hero-subtitle">Discover personalized career paths, master job market trends, and unlock your full
          potential with our intelligent career advisor.</p>
        <div class="d-flex justify-content-center gap-3">
          <a href="" class="btn btn-primary btn-lg">Get Started</a>
          <a href="#features" class="btn btn-outline-white btn-lg">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">Key Features</h2>
        <p class="lead text-muted">Everything you need to advance your career</p>
      </div>
      <div class="row g-4">
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-1">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
            <h4>Skills Assessment</h4>
            <p>Evaluate your abilities with our advanced AI-powered assessment tools.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-2">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-briefcase"></i></div>
            <h4>Market Analysis</h4>
            <p>Real-time insights into current job market demands and trends.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-3">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-file-alt"></i></div>
            <h4>Resume Builder</h4>
            <p>Create professional resumes tailored to your target roles.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-4">
          <div class="feature-card p-4 text-center">
            <div class="feature-icon"><i class="fas fa-network-wired"></i></div>
            <h4>Network Analysis</h4>
            <p>Identify key connections to accelerate your career growth.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-5">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">How It Works</h2>
        <p class="lead text-muted">Get career guidance in just 4 simple steps</p>
      </div>
      <div class="row g-4">
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-1">
          <div class="step-card">
            <div class="step-number">1</div>
            <h4>Complete Assessment</h4>
            <p>Take our comprehensive skills and personality assessment.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-2">
          <div class="step-card">
            <div class="step-number">2</div>
            <h4>Market Comparison</h4>
            <p>We analyze your profile against job market demands.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-3">
          <div class="step-card">
            <div class="step-number">3</div>
            <h4>Personalized Plan</h4>
            <p>Receive a customized career roadmap with actionable steps.</p>
          </div>
        </div>
        <div class="col-6 col-md-3 animate__animated animate__fadeInUp animate-delay-4">
          <div class="step-card">
            <div class="step-number">4</div>
            <h4>Interview Prep</h4>
            <p>Get tailored interview preparation and resume advice.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-5 bg-light">
    <div class="container-fluid py-5 px-5">
      <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="fw-bold">Success Stories</h2>
        <p class="lead text-muted">What our users say about their experience</p>
      </div>
      <div class="row g-4">
        <div class="col-12 col-md-6 animate__animated animate__fadeInUp animate-delay-1">
          <div class="testimonial-card">
            <p>"This platform transformed my career trajectory."</p>
            <div class="testimonial-author"><img src="https://randomuser.me/api/portraits/women/32.jpg"
                class="author-avatar">
              <div>
                <h6>Alex Johnson</h6><small class="text-muted">Software Developer</small>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6 animate__animated animate__fadeInUp animate-delay-2">
          <div class="testimonial-card">
            <p>"The interview prep gave me confidence to land my dream job."</p>
            <div class="testimonial-author"><img src="https://randomuser.me/api/portraits/men/45.jpg"
                class="author-avatar">
              <div>
                <h6>Jamie Smith</h6><small class="text-muted">Marketing Director</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section text-center">
    <div class="container-fluid px-5 py-5">
      <h2 class="cta-title animate__animated animate__fadeIn">Ready to Transform Your Career?</h2>
      <p class="lead mb-4 animate__animated animate__fadeIn">Join thousands who've accelerated their careers with AI
        guidance.</p>
      <a href="/skill-assessment" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">Start Free
        Assessment</a>
    </div>
  </section>